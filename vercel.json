{
  "version": 2,
  "installCommand": "npm install --force",
  "builds": [
    { "src": "frontend/**", "use": "@vercel/node", "config": { "NODE_ENV": "production" },
      "buildCommand": "npm run custom-install && npm run build"},
    { "src": "backend/**", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
